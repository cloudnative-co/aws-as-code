{
    "schemaVersion": "2.2",
    "description": "Setup SSM User for Active Directory",
    "parameters": {
        "domainNetBiosName": {
            "type": "String",
            "description": "Domain NetBIOS Name for ADDS"
        }
    },
    "mainSteps": [
        {
            "action": "aws:runPowerShellScript",
            "name": "runPowerShellScript",
            "precondition": {
                "StringEquals": [
                    "platformType", "Windows"
                ]
            },
            "inputs": {
                "runCommand": [
                    "$password = Get-SECSecretValue -SecretId AdminPassword | Select-Object SecretString",
                    "$encrypted_password = ConvertTo-SecureString $password -AsPlainText -Force",
                    "New-ADUser -Name ssm-user -AccountPassword $encrypt_password -Enabled $true",
                    "Add-ADPrincipalGroupMembership ssm-user -memberOf \"Domain Admins\"",
                    "Set-ADAccountPassword -Identity {{ domainNetBiosName }}\\Administrator -NewPassword $encrypted_password -Reset"
                ]
            }
        }
    ]
}
